        </activity>
        <activity
            android:name=".ui.lead_list"
            android:label="@string/title_activity_lead_list" >
        </activity>
        <activity
            android:name=".ui.input_lead"
            android:label="@string/title_activity_input_lead" >
        </activity>
        <activity
            android:name=".ui.Customer_list_row"
            android:label="@string/title_activity_customer_list_row" >
        </activity>
        <activity
            android:name=".ui.lead_details"
            android:label="@string/title_activity_lead_details" >
        </activity>
    </application>

</manifest>
